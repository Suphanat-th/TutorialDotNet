@using Tutorial.Models;
@model userResponse;
@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutLogin";
}
<div class="row">
    <div class="col-12 mt-5">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-center">
                    REGISTER
                </div>
            </div>
            <div class="card-body">
                <div class=" w-100">
                    <div class="row">
                        @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                        {
                            <div class="form-group my-3">
                                <label>USERNAME : </label>
                                @Html.TextBoxFor(x=>x.username,new {@class="form-control",@placeholder="USERNAME OR EMAIL",@autocomplete=false})
                            </div>
                            <div class="form-group my-3">
                                <label>PASSWORD : </label>
                                @Html.PasswordFor(x=>x.password,new {@class="form-control",@placeholder="PASSWORD",@autocomplete=false})
                            </div>
                            @Html.ValidationMessage("error","",new {@class="text-danger"})
                            <div class="col-12 my-3">
                                <div class="d-flex justify-content-end">
                                    <button class="btn btn-primary">Register</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>